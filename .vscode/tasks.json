{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start full",
      "dependsOn": [
        "Start backend",
        "Start frontend",
        "Start postgres",
        "Start shared"
      ],
      "dependsOrder": "parallel",
      "isBackground": true,
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start shared",
      "command": "yarn start",
      "options": {
        "cwd": "${cwd}/shared",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-i", "-c"]
        }
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start backend",
      "command": "yarn start:dev",
      "options": {
        "cwd": "${cwd}/backend",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-i", "-c"]
        }
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start frontend",
      "command": "yarn watch",
      "options": {
        "cwd": "${cwd}/frontend",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-i", "-c"]
        }
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start postgres",
      "command": "yarn devdb:up",
      "options": {
        "cwd": "${cwd}",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-i", "-c"]
        }
      },
      "group": "build"
    }
  ]
}
