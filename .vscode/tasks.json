{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start full",
      "dependsOn": ["Start backend", "Start frontend", "Start postgres"],
      "dependsOrder": "parallel",
      "isBackground": true,
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start shared",
      "command": "yarn start",
      "options": {
        "cwd": "./shared"
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start backend",
      "command": "yarn start:dev",
      "options": {
        "cwd": "./backend"
      },
      "dependsOn": ["Start shared"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start frontend",
      "command": "yarn start",
      "options": {
        "cwd": "./frontend"
      },
      "dependsOn": ["Start shared"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Start postgres",
      "command": "podman-compose up",
      "options": {
        "cwd": "./support"
      },
      "group": "build"
    }
  ]
}
